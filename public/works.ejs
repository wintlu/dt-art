<div class="banner green">
</div>
<div class="content-wrap container">
    <div class="panel panel-default">
        <div class="panel-heading">
            <div class="row">
                <div class="col-sm-4 panel-title">案例展示</div>
                <div class="col-sm-8">
                    <ul class="menu-nav-2 pull-right">
                        <li class="active"><a href="#works-animation" title="">三维动画</a>
                        </li>
                        <li><a href="#works-media" title="">多媒体</a>
                        </li>
                        <li><a href="#works-video" title="">影视广告</a>
                        </li>
                        <li><a href="#works-drawing" title="">效果图</a>
                        </li>
                        <li><a href="#works-others" title="">其他作品</a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="panel-body">
            <div class="tab-content">
                <div role="tabpanel" class="tab-pane" name="works-animation">
                    <div class="row">
                        <% var contents = works_animation;
                         for(var i in contents){ %>
                          <% var work = contents[i] %>
                            <div class="col-sm-3">
                            <div class="tab-pane-item img-sm" data-media="<%= work.video %>">
                                <img src="img/ajax-loader.gif" data-delay-src="<%= cdn_url + work.image %>">
                                <div class="backdrop"></div>
                                <div class="img-title">
                                    <%- work.title %>
                                </div>
                            </div>
                        </div>
                        <% } %>
                    </div>
                </div>
                <div role="tabpanel" class="tab-pane" name="works-media">
                    <div class="row">
                        <% for(var i in works_media){ %>
                          <% var work = works_media[i] %>
                            <div class="col-sm-3">
                            <div class="tab-pane-item img-sm" data-media="<%= work.video %>">
                                <img src="img/ajax-loader.gif" data-delay-src="<%= cdn_url + work.image %>">
                                <div class="backdrop"></div>
                                <div class="img-title">
                                    <%- work.title %>
                                </div>
                            </div>
                        </div>
                        <% } %>
                    </div>
                </div>
                <div role="tabpanel" class="tab-pane" name="works-video">
                     <div class="row">
                      <% for(var i in works_video){ %>
                          <% var work = works_video[i] %>
                            <div class="col-sm-3">
                            <div class="tab-pane-item img-sm" data-media="<%= work.video %>">
                                <img src="img/ajax-loader.gif" data-delay-src="<%= cdn_url + work.image %>">
                                <div class="backdrop"></div>
                                <div class="img-title">
                                    <%- work.title %>
                                </div>
                            </div>
                        </div>
                        <% } %>
                    </div>
                </div>
                <div role="tabpanel" class="tab-pane" name="works-drawing">
                    <div class="row">
                        <% for(var i in works_drawing){ %>
                            <div class="col-sm-3">
                            <div class="tab-pane-item img-sm" data-image >
                                <img class="contain" src="img/ajax-loader.gif" data-delay-src="<%= cdn_url + works_drawing[i].image %>">
                                <div class="backdrop"></div>
                                <div class="img-title">
                                    <%- works_drawing[i].title %>
                                </div>
                            </div>
                        </div>
                        <% } %>
                    </div>
                </div>
                <div role="tabpanel" class="tab-pane" name="works-others">
                    <h4 class="text-center text-muted">暂无作品</h4>
                </div>
            </div>
        </div>
    </div>
</div>
