@import 'bootstrap-paper.css'
@import 'animate'
@import 'content'

body{
  font-family: Helvetica, Tahoma, Arial, STXihei, "华文细黑", "Microsoft YaHei", "微软雅黑", SimSun, "宋体", Heiti, "黑体", sans-serif;
}

@media (min-width: 1200px)
  .container
    max-width: 970px
    
.row.no-gutters
  margin-left: 0
  margin-right: 0
  > [class^="col-"], > [class*=" col-"]
    padding-left: 0
    padding-right: 0

$brand-color = #ca4773
$bk-color = #323232
$font-color-white = #eeeeee
$font-color-dark = #333333
$gray = #eee

//global styles
a
  color: $font-color-white
  &, &:hover, &:visited, &:focus
    text-decoration: none
ul
  padding: 0
  margin: 0
  list-style-type: none
  
//components
body
  background: #fff
.top-banner
  background: $bk-color
  height: 30px
  line-height: 30px
  color: #ddd
.stripe
  height: 5px
  background: $brand-color
  background: linear-gradient(135deg, $brand-color, #F7B7AA)
.header
  padding-top: 20px
  .title
    color: $brand-color
    letter-spacing: 5px
    font-weight: bold
.intro
  padding-top: 15px
.menu-nav
  list-style-type: none
  margin-bottom: 0
  padding-left: 0
  &:after
    content: " "
    display: table
    clear: both
  a
    text-decoration: none
    margin: 0
    padding: 0
    display: block
    padding: auto 20px
    text-align: center
    height: 43px
    line-height: 43px
    color: $font-color-dark
  .flip-box
    .bottom
      color: $font-color-white
      background-color: $brand-color
  >li
    position: relative
    float: left
    width: 100px
    >ul
      width: 100%
      padding: 0
      position: absolute
      left: 0
      top: 100%
      display: none
      z-index: 10
      >li
        width: 100%
        transition: background-color 0.3s
        background-color: #fff
        a
          color: $font-color-dark
          text-align: center
        &:hover a //secondary menu hover effect
          background-color: $brand-color
          color: $font-color-white
    &:hover   //top menu item hover effect: show submenu
      > ul
        display: block
        @extend .animated, .flipInX
    &.active, &:hover  //top menu hover and active effect: hight anchor
      .flip-box
        @extend .flipUp
        html[class^="ie"] &  //add hightlight for ie
          background-color: $brand-color
          color: $font-color-white

.modal-nav-toggle
  border: none
  background: transparent
  padding: 10px
  span
    width: 22px
    height: 2px
    background: $bk-color
    display: block
    margin-top: 10px
    &:first-child
      margin-top: 0
  
.modal-nav-wrap
  position: fixed
  background-color: #fff
  top: 0
  right: 0
  height: 0
  width: 0
  z-index: 100
  overflow-x: hidden
  overflow-y: auto
  opacity: 0
  &.active
    opacity: 1
    height: 100%
    width: 100%
  .close-button
    font-size: 50px
    margin-right: 15px
    cursor: pointer
    float: right
  .modal-nav
    width: 100%
    font-size: 40px 
    text-align: center
    a
      display: block
      color: $brand-color
  
.menu-nav-2
  list-style-type: none
  padding-left: 0
  margin-bottom: 0
  &:after
    content: " "
    display: table
    clear: both
  li
    cursor: pointer
    float: left
    background-color: $gray
    a
      padding: 4px 10px
      color: $font-color-dark
    &.active a, a:hover
      background-color: $brand-color
      color: $font-color-white
      @extend .animated
      @extend .flipInY
    + li
      margin-left: 2px

&.work-lg
  height: 360px
&.work-sm
  height: 165px
&.work-lg, &.work-sm
  background-size: 100%      
  // background-size: cover
  background-position-x: 50%
  background-position-y: 50%
  transition: all 0.3s  
  margin-bottom: 30px
  .work-title
    font-size: 20px
    text-align: center
  .work-detail
    font-size: 15px
    text-align: center
  &:hover
    background-size: 110%
      
  &.active .tab-pane-item
    @extend .animated
    @extend .puffIn
    
[data-media]
  cursor: pointer
  
.biz
  .row
    .col-sm-3
      height: 220px
      img
        display: inline
.customers
  .customer-logo
    height: 65px
    img
      display: inline
hr.thin
  margin-top: 3px
  margin-bottom: 10px
#slider_container
  height: 300px
  width: 1300px
  position: relative
  top: 0px 
  left: 0px
  .jssora21l,
  .jssora21r,
  .jssora21ldn,
  .jssora21rdn 
    position: absolute;
    background: red
    cursor: pointer;
    display: block;
    background: url('../img/slider-arrow.png') center center no-repeat;
    overflow: hidden;
  .jssora21l
    background-position: -3px -33px;
  .jssora21r
    background-position: -63px -33px;
  .jssora21l:hover
    background-position: -123px -33px;
  .jssora21r:hover
    background-position: -183px -33px;
  .jssora21ldn
    background-position: -243px -33px;
  .jssora21rdn
    background-position: -303px -33px;

footer
  &, a, a:hover,a:visited
    color: #bbb
    text-decoration: none
  a:hover
    color: #eee
  background-color: $bk-color
  padding-top: 20px
  
//content page
.banner
    height: 150px
    &.green
      background-color: #53e0b3
.content-wrap
  margin-bottom: 30px
  .panel
    position: relative
    margin-top: -45px
    .panel-title
      font-size: 20px
  .content-item
    margin-bottom: 15px
    
   
