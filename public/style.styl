$brand-color = #ca4773
$bk-color = #323232
$font-color-white = #eeeeee
$font-color-dark = #333333
$gray = #eee


//global styles
a
  text-decoration: none
  color: $font-color-white
  &:hover, &:visited
    text-decoration: none

body
  background: #fff
.top-banner
  background: $bk-color
  height: 30px
  line-height: 30px
  color: #ddd
.stripe
  height: 5px
  background: $brand-color
  background: linear-gradient(135deg, $brand-color, #F7B7AA)
.header
  padding-top: 20px
  .title
    color: $brand-color
    letter-spacing: 5px
    font-weight: bold
.menu-nav
  list-style-type: none
  margin-bottom: 0
  padding-left: 0
  &:after
    content: " "
    display: table
    clear: both
  a
    text-decoration: none
    margin: 0
    padding: 0
    display: block
    padding: 10px 20px
    text-align: center
  li
    position: relative
    float: left
    width: 100px
    a
      color: $font-color-dark
    >ul
      padding: 0
      list-style-type: none
      position: absolute
      left: 0
      top: 100%
      display: none
      >li
        width: 100%
        transition: background-color 0.3s
        background-color: #fff
        a
          color: $font-color-dark
          text-align: center
    &:hover, &.active
      @extend .animated
      @extend .flipInX
      background-color: $brand-color
      >a
        color: $font-color-white
    &:hover
      >ul
        display: block
        >li
          display: block
.modal-nav-toggle
