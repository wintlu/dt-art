.modal-nav-wrap
  display: none
  position: fixed
  background-color: #fff
  top: 0
  left: 0
  right: 0
  bottom: 0
  z-index: 100
  overflow-x: hidden
  overflow-y: auto
  padding-top: 30px
  padding-bottom: 30px
  .close
